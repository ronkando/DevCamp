<div class="row">
  <div class="col-md-6">

    <%= form_for(@portfolio_item) do |form| %>
      <div class="form-group">
        <%= form.label :title %>
        <%= form.text_field :title ,class:"form-control"%>
      </div>
      <div class="form-group">
        <%= form.label :subtitle %>
        <%= form.text_field :subtitle,class:"form-control" %>
      </div>
    </div>
      <div class="col-md-6">
        <div class="form-group">
          <%= form.label :body %>
          <%= form.text_area :body,class:"form-control" , rows:13%>
        </div>

      </div>
</div>


  <hr/>
      <div class="col-md-12">
        <h2>Technologies Used: </h2>
        <ul>
          <%= form.fields_for :technologies do |technology| %>
            <li>
              <%= technology.label :name %>
              <%= technology.text_field :name,class:"form-control" %>
            </li>
          <% end %>
        </ul>

        <div class="form-group">
          <%= form.submit "save Portfolio item" , class:"tbn btn-primary btn-block"%>
        </div>

      </div>

<% end %>